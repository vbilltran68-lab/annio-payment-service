{
  "name": "annio-payment-service",
  "displayName": "Annio Payment Service",
  "version": "1.0.0",
  "description": "Annio Payment Service",
  "author": {
    "name": "Bill Tran",
    "email": "tvkhue96@gmail.com"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "migrate:create": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:create -n",
    "migrate:revert": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert",
    "migrate": "cross-env MIGRATIONS=true ./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prebuild": "rimraf dist",
    "build": "npm run build:tsc",
    "build:tsc": "nest build --tsc",
    "build:watch": "nest build --watch",
    "start": "pm2-runtime ./ecosystem-prod.yml --env production",
    "start:dev": "npm run pm2:stop && ./node_modules/.bin/pm2 startOrReload ./ecosystem.yml && npm run logs",
    "stop": "npm run pm2:stop",
    "logs": "./node_modules/.bin/pm2 logs",
    "logs:flush": "./node_modules/.bin/pm2 flush",
    "pm2:stop": "./node_modules/.bin/pm2 kill",
    "pm2:dashboard": "./node_modules/.bin/pm2 plus",
    "pm2:process": "./node_modules/.bin/pm2 monit",
    "pm2:upgrade": "./node_modules/.bin/pm2 update",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "nest:upgrade": "nest update -f -t latest"
  },
  "dependencies": {
    "@annio/core": "1.0.5",
    "@nestjs/common": "6.10.14",
    "@nestjs/core": "6.10.14",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/microservices": "6.10.14",
    "@nestjs/passport": "6.1.1",
    "@nestjs/platform-express": "6.10.14",
    "@nestjs/swagger": "4.1.7",
    "@nestjs/typeorm": "6.2.0",
    "amqp-connection-manager": "^3.7.0",
    "amqplib": "^0.8.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.11.0",
    "cli-highlight": "2.1.1",
    "cross-env": "6.0.3",
    "i18next": "^19.8.3",
    "mysql2": "2.1.0",
    "node-django-hashers": "1.1.6",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "7.1.0",
    "swagger-ui-express": "4.1.2",
    "typeorm": "0.2.25"
  },
  "devDependencies": {
    "@nestjs/cli": "6.13.1",
    "@nestjs/schematics": "6.8.0",
    "@nestjs/testing": "6.10.14",
    "@types/express": "4.17.2",
    "@types/jest": "24.0.25",
    "@types/node": "12.12.24",
    "@types/passport-jwt": "3.0.3",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.12",
    "jest": "24.9.0",
    "nodemon": "2.0.2",
    "pm2": "4.5.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "24.3.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "typescript": "3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
